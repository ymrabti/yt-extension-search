{
  "manifest_version": 3,
  "name": "YouTube Search",
  "version": "1.0",
  "description": "Quick YouTube search from your browser toolbar or by right-clicking selected text",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ]
}
